        </div>

        <div class="sm:col-span-1 sm:row-span-1">
            <Image src={square2} alt="billed" class="w-full h-full object-cover rounded-sm" />
        </div>

        <div class="sm:col-span-1 sm:row-span-1 sm:row-start-2 sm:col-start-6">
            <Image src={square1} alt="billed" class="w-full h-full object-cover rounded-sm" />
        </div>

        <div class="sm:col-span-1 sm:row-span-1 sm:row-start-1 sm:col-start-3 bg-brun-500  flex items-center justify-center text-center rounded-sm p-6" href="/produktliste">
