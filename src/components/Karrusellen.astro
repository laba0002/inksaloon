      <div class="hidden md:block w-[450px] h-[450px] flex-shrink-0 overflow-hidden rounded-md mr-xl">
        <Image
          src={altilbordet}
          alt="Invitation 2"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>
</div>    <div class="absolute left-s right-s top-1/2 flex -translate-y-1/2 transform justify-between z-50">
