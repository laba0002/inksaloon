---

const {variant="primary", size="medium"} = Astro.props;

const buttonStyling = " py-xxs transition";

const variantClasses = {
    "primary": "bg-orange-500  text-hvidgul-100 hover:bg-orange-600",
    "secondary": "bg-transparent border border-text-brun-900 text-text-brun-900 hover:bg-brun-900 hover:text-hvidgul-50",
    "tertiary": "bg-transparent border border-hvidgul-100 text-hvidgul-100 hover:bg-hvidgul-50 hover:text-brun-900"
};

const sizeClasses = {
    "small": "px-s  text-konsultativDesk",      
    "medium": " px-s md:px-ml   px-14 text-baseDesk", 
    "large": "w-auto px-xs md:px-lg text-bodyMobile md:text-bodyDesk"       
};

---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
