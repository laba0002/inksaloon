---

const {variant="primary", size="medium"} = Astro.props;

const buttonStyling = " py-xxs transition hover:italic";

const variantClasses = {
    "primary": "bg-orange-500  text-hvidgul-100 hover:text-hvidgul-400",
    "secondary": "bg-transparent border border-brun-800 text-brun-800 hover:text-brun-700",
    "tertiary": "bg-transparent border border-hvidgul-100 text-hvidgul-100 hover:text-hvid-500"
};

const sizeClasses = {
    "small": "px-s  text-konsultativDesk",      
    "medium": " px-s md:px-ml   px-14 text-baseDesk", 
    "large": "w-auto px-xs md:px-lg text-bodyMobile md:text-bodyDesk"       
};

---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>