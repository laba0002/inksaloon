---
const { title } = Astro.props;
---

<details class=" border-b border-b-brun-400 mb-xxs">
  <summary class="text-brun-700 cursor-pointer p-s flex justify-between items-center after:border-t after:border-t-brun-400 ">{title}</summary>
  <article class="p-sm flex justify-between flex-col gap-none">
    <slot />
  </article>
</details>

<style>

  /* summary::after {
    content: "";
    width: 0;
    height: 0;
    border-top: 0.5rem solid brown;
    border-inline: 0.4rem solid transparent;
  } */
  details[open] > summary::after {
    transform: rotate(-180deg);
  }

</style>

<script>
  // Fetch all the details element.
  const details = document.querySelectorAll("details");

  // Add the onclick listeners.
  details.forEach((targetDetail) => {
    targetDetail.addEventListener("click", () => {
      // Close all the details that are not targetDetail.
      details.forEach((detail) => {
        if (detail !== targetDetail) {
          detail.removeAttribute("open");
        }
      });
    });
  });
</script>