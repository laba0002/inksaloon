---
import MainLayout from "../layouts/MainLayout.astro";
import 'animate.css';
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Bento from "../components/Bento.astro";
import Knap from "../components/Knap.astro";
import Instagram from "../components/Instagram.astro";
import Trestep from "../components/Trestep.astro";
import Tillykke from "../components/Tillykke.astro";
import Review from "../components/Review.astro";
import Cards from "../components/Cards.astro";
import Karrusel from "../components/Karrusel.astro";
import Typewrite from "../components/Typewrite.astro";
import invi1 from "../assets/images/invi_1.jpg";
import invi2 from "../assets/images/invi_2.jpg";
import invi3 from "../assets/images/invi_3.jpg";
import invi4 from "../assets/images/invi_4.jpg";
import invi5 from "../assets/images/invi_5.jpg";
import format from "../assets/images/format.jpg";
import altilbordet from "../assets/images/altilbordet.jpg";
import boheme from "../assets/images/bohemepic.jpg";
import vandmaling from "../assets/images/vandmaling.jpg";
import FakeNav from "../components/FakeNav.astro";
import Karrusellen from "../components/Karrusellen.astro";
---

<MainLayout title="Forside">
  <div class="stickynav"> <FakeNav /></div>

<section class="my-xl">
  <Typewrite />
  <div class="flex flex-row justify-center items-center mx-sm md:mx-ml mt-ml md:mt-2xl ">
    <div class="w-7xl shadow-card transition-transform  duration-300 ease-in hover:-rotate-6  hover:scale-110 hover:z-50">   
      <Image src={invi1} class="drop-shadow-xl" alt="Invitation 1"/>
    </div>
    <div class="w-7xl  shadow-card origin-center -rotate-12 transition-transform  duration-300 ease-in hover:-rotate-6  hover:scale-110 hover:z-50">
      <Image src={invi2} class="drop-shadow-xl" alt="Invitation 2"/>
    </div>
    <div class="w-7xl shadow-card  z-10  transition-transform scale-105 duration-300 ease-in hover:-rotate-3 hover:scale-125 "> 
      <Image src={invi3} class="drop-shadow-xl" alt="Invitation 3"/>
    </div>
    <div class="w-7xl shadow-card  origin-center rotate-12 transition-transform  duration-300 ease-in hover:-rotate-6 hover:scale-110 hover:z-50"> 
      <Image src={invi4} class="drop-shadow-xl" alt="Invitation 4"/>
    </div>
    <div class="w-7xl shadow-card transition-transform  duration-300 ease-in hover:rotate-6 hover:scale-110 hover:z-60"> 
      <Image src={invi5} class="drop-shadow-xl" alt="Invitation 5"/>
    </div>
  </div>
</section>

 
 
  <Cards />
  <Trestep />

<Karrusellen />

  <Instagram />

  <div class="flex flex-wrap justify-center gap-m bg-[url('/bg_review.jpg')] bg-cover p-lg">
    <Review text="“Har netop modtaget vores konfirmationsinvitationer. Smukkeste indpakning og flotteste invitationer i den lækreste kvalitet. Kan ikke vente med  at sende dem ud.”" name="Gavin J." />
    <Review text="“Meget positivt overrasket over kvalitet og brugeroplevelse, da vi modtog vores varer. Lækker indpakning.”" name="Poul B." />
    <Review text="“Ville god service! Vi fik lavet vores invitationer af Emilie og hendes kollega gennem mail, og invitationerne blev præcis som vi ønskede. Der var hurtig levering både da vi modtog nogle forkerte invitationer og da de sendte de rigtige!”" name="Tine H." />
    <Review text="“Ualmindelig god, fleksibel og hurtig service. Vi har modtaget de smukkeste invitationer og den løbende dialog med rettelser og godkendelser af layoutet har været meget imødekommende og hurtig..”" name="Bjarne L." />
  </div>

  <Tillykke />


  
</MainLayout>
